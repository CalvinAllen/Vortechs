@inherits LayoutComponentBase
@layout VortechsApp.Components.Layout.MainLayout

<div class="manage-container">
    <div class="manage-header">
        <div class="manage-header-content">
            <div>
                <h1>Account Settings</h1>
                <p class="manage-subtitle">Manage your dtvem account preferences</p>
            </div>
            <a href="#" class="invite-friends-link">Invite Your Friends</a>
        </div>
    </div>

    <div class="manage-layout">
        <nav class="manage-nav">
            <ManageNavMenu />
        </nav>
        <div class="manage-content">
            @Body
        </div>
    </div>
</div>

<style>
    .manage-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 2rem;
    }

    .manage-header {
        margin-bottom: 3rem;
    }

    .manage-header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    .manage-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .manage-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin: 0;
    }

    .invite-friends-link {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        color: #1a2332;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        white-space: nowrap;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: inline-block;
    }

    .invite-friends-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(92, 212, 198, 0.4);
        color: #1a2332;
    }

    .manage-layout {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 3rem;
    }

    .manage-nav {
        position: sticky;
        top: 5rem;
        height: fit-content;
    }

    .manage-content {
        background: var(--surface);
        border: 1px solid var(--border-color);
        border-radius: 1rem;
        padding: 2.5rem;
    }

    @@media (max-width: 992px) {
        .manage-container {
            padding: 2rem 1rem;
        }

        .manage-header-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.5rem;
        }

        .manage-header h1 {
            font-size: 2rem;
        }

        .invite-friends-link {
            width: 100%;
            text-align: center;
        }

        .manage-layout {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .manage-nav {
            position: static;
        }
    }
</style>
